<UserControl x:Class="Examen2doParcial.ControlInformaciondePago"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Examen2doParcial"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500">
    <StackPanel Background="White">

        <TextBlock>Numero de tarjeta</TextBlock>
        <TextBox Name="txtNumeroTarjeta"></TextBox>
        <TextBlock>CVV</TextBlock>
        <TextBox Name="txtCVV"></TextBox>
        <TextBlock >Mes de expiracion</TextBlock>
        <TextBox Name="txtMesExpiracion"></TextBox>
        <TextBlock>Año de expiracion</TextBlock>
        <TextBox Name="txtAñoExpiracion"></TextBox>

    </StackPanel>
</UserControl>
